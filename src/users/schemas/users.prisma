datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// ? USERS

// Обязательные поля только юзернейм, пароль, ФИО, дополнительно можно мейл, пол, фото(?)
model UserEntity {
    // ? required fields
    id       Int         @id @default(autoincrement())
    username String      @unique
    password String
    name     String
    roles    UserRoles[]
    // ? optional fields
    email    String?     @unique
}

// ? ROLES

enum UserRoles {
    ADMIN
    REGULAR
}
